{% trans_default_domain 'FOSUserBundle' %}

<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title">Modifier le mot de passe</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6 col-md-offset-2 text-center">
                    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    <div class="form-group">
                        {{ form_errors(form.current_password) }}
                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe actuel'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.plainPassword.first) }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Répéter le nouveau mot de passe'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_rest(form) }}
                    </div>
                    <div class="form-group">
                        <input class="btn btn-success" type="submit" value="{{ 'change_password.submit'|trans }}" />
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
