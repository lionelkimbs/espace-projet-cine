{% trans_default_domain 'FOSUserBundle' %}

{# CSS files #}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
{% endblock %}


<div class="panel panel-info">
    <div class="panel-heading">
