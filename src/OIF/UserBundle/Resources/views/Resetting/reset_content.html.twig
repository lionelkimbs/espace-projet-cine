    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6 col-md-offset-2 text-center">
                    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
