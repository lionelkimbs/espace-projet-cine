{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">

    <div class="panel panel-info">
        <div class="panel-heading">
            <h2 class="panel-title">{{ user.firstname }} {{ user.name }}</h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3 col-lg-3 " align="center">
                    <img alt="User Pic" src="https://www.mautic.org/media/images/default_avatar.png" title="Fonctionnalité bientôt disponible" class="img-circle img-responsive">
                </div>

                <div class=" col-md-9 col-lg-9 ">
                    <table class="table table-user-information">
                        <tbody>

                            <tr>
                                <td>Identifiant :</td>
                                <td>
                                    <b>{{ user.username }}</b>
                                </td>
                            </tr>

                            <tr>
                                <td>Email :</td>
                                <td>
                                    <b>{{ user.email }}</b>
                                </td>
                            </tr>

                            <tr>
                                <td>Activité :</td>
                                <td>
                                    <b>{{ user.activite.libelle }}</b>
                                </td>
                            </tr>

                            <tr>
                                <td>Inscirt le :</td>
                                <td>
                                    <b>{{ user.dateInscription|date('d/m/Y') }}</b>
                                </td>
                            </tr>

                            <tr>
                                <td>Téléphone(s) :</td>
                                <td>
                                    {% if user.phone is not empty %} <b>Fixe : </b>{{ user.phone }} {% endif %}
                                    <br>
                                    {% if user.cellular is not empty %}<b>Mobile : </b>{{ user.cellular }} {% endif %}
                                </td>
                            </tr>

                            <tr>
                                <td>Pays :</td>
                                <td>
                                    <b>{{ user.pays.libelle }}</b>
                                </td>
                            </tr>

                            <tr>
                                <td>Facebook :</td>
                                <td>
                                    <a href="{{ user.facebook }}" target="_blank">{{ user.facebook }}</a>
                                </td>
                            </tr>

                            <tr>
                                <td>Twitter :</td>
                                <td>
                                    <a href="{{ user.twitter }}" target="_blank">{{ user.twitter }}</a>
                                </td>
                            </tr>

                            <tr>
                                <td>Linkedin :</td>
                                <td>
                                    <a href="{{ user.linkedin }}" target="_blank">{{ user.linkedin }}</a>
                                </td>
                            </tr>

                            <tr>
                                <td>Site web :</td>
                                <td>{{ user.website }}</td>
                            </tr>

                            <tr>
                                <td>Pourquoi vous êtes-vous inscrit(e) :</td>
                                <td>{{ user.informations }}</td>
                            </tr>

                        </tbody>
                    </table>
                    <div class="pull-right">
                        <a href="{{ path('fos_user_change_password')}}" class="btn btn-warning">Modifier le mot de passe</a>
                        <a href="{{ path('fos_user_profile_edit')}}" class="btn btn-info">Modifier votre profil</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
