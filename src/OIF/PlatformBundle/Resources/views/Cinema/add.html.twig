{% extends 'OIFCoreBundle::layout.html.twig' %}

{% block title %}Nouveau projet - Commission cinéma | {{ parent() }}{% endblock %}

{# CSS files #}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

{% endblock %}

{# Content #}
{% block body %}
<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title">Informations du projet</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}
                <div class="row">
                    {# Type d'intervention #}
                    <div class="col-md-4 col-md-offset-1">
                        <div class="form-group">
                            <h4>1. Type d'intervention :</h4>
                            {{ form_errors(form.typeIntervention) }}
                            {{ form_widget(form.typeIntervention) }}
                        </div>
                    </div>
                    {# Genre #}
                    <div class="col-md-4 col-md-offset-1">
                        <div class="form-group">
                            <h4>2. Genre :</h4>
                            {{ form_errors(form.genre) }}
                            {{ form_widget(form.genre) }}
                        </div>
                    </div>
                    {# Durée #}
                    <div class="col-md-4 col-md-offset-1">
                        <div class="form-group">
                            <h4>3. Durée :</h4>
                            {{ form_errors(form.duree) }}
                            {{ form_widget(form.duree) }}
                        </div>
                    </div>

                    {# Support de tournage prévu #}
                    <div class="col-md-4 col-md-offset-1">
                        <div class="form-group">
                            <h4>4. Support de tournage et Support diffusion :</h4>
                            {{ form_errors(form.support) }}
                            {{ form_widget(form.support, {'attr': {'class': 'form-control', 'placeholder': 'Support de tournage prévu'} }) }}
                            <br>
                            {{ form_errors(form.standard) }}
                            {{ form_widget(form.standard, {'attr': {'class': 'form-control', 'placeholder': 'Standard de projection ou de diffusion prévu (2K, 4K, HD, etc.)'} }) }}
                        </div>
                    </div>

                    {# Caractéristiques du projet #}
                    <div class="col-md-10 col-md-offset-1">
                        <hr>
                        <h4>5. Caractéristiques du projet :</h4>
                    </div>
                    <div class="col-md-4 col-md-offset-1">
                        {# Titre du projet #}
                        <div class="form-group">
                            {{ form_errors(form.titre) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre du projet'} }) }}
                        </div>

                        {# Pays #}
                        <div class="form-group">
                            <h5>Pays du réalisateur </h5>
                            {{ form_errors(form.paysRealisateur) }}
                            {{ form_widget(form.paysRealisateur, {'attr': {'class': 'form-control'} }) }}
                        </div>

                        {# Réalisateur #}
                        <div class="form-group">
                            {{ form_errors(form.realisateur) }}
                            {{ form_widget(form.realisateur, {'attr': {'class': 'form-control', 'placeholder': 'Réalisateur'} }) }}
                        </div>

                        {# Année #}
                        <div class="form-group">
                            {{ form_errors(form.annee) }}
                            {{ form_widget(form.annee, {'attr': {'class': 'form-control', 'placeholder': 'Année de naissance'} }) }}
                        </div>

                        {# Nom de la structure #}
                        <div class="form-group">
                            {{ form_errors(form.nomStructure) }}
                            {{ form_widget(form.nomStructure, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la structure'} }) }}
                        </div>

                        {# Type de structure #}
                        <div class="form-group">
                            <h5>Type de structure</h5>
                            {{ form_errors(form.typeStructure) }}
                            {{ form_widget(form.typeStructure) }}
                        </div>

                        {# Adresse de la structure #}
                        <div class="form-group">
                            {{ form_errors(form.adresseStructure) }}
                            {{ form_widget(form.adresseStructure, {'attr': {'class': 'form-control', 'placeholder': 'Adresse de la structure'} }) }}
                        </div>

                        {# Ville de la structure #}
                        <div class="form-group">
                            {{ form_errors(form.villeStructure) }}
                            {{ form_widget(form.villeStructure, {'attr': {'class': 'form-control', 'placeholder': 'Ville de la structure'} }) }}
                        </div>

                        {# Pays de la structure #}
                        <div class="form-group">
                            <h5>Pays de la structure </h5>
                            {{ form_errors(form.paysStructure) }}
                            {{ form_widget(form.paysStructure, {'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="col-md-4 col-md-offset-1">
                        {# Nom du responsable de la structure #}
                        <div class="form-group">
                            {{ form_errors(form.nomResponsable) }}
                            {{ form_widget(form.nomResponsable, {'attr': {'class': 'form-control', 'placeholder': 'Nom du responsable de la structure'} }) }}
                        </div>

                        {# Prénom du responsable de la structure #}
                        <div class="form-group">
                            {{ form_errors(form.prenomResponsable) }}
                            {{ form_widget(form.prenomResponsable, {'attr': {'class': 'form-control', 'placeholder': 'Prénom du responsable de la structure'} }) }}
                        </div>

                        {# Téléphone de la structure #}
                        <div class="form-group">
                            {{ form_errors(form.telResponsable) }}
                            {{ form_widget(form.telResponsable, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'} }) }}
                        </div>

                        {# Email de la structure #}
                        <div class="form-group">
                            {{ form_errors(form.emailResponsable) }}
                            {{ form_widget(form.emailResponsable, {'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
                        </div>

                        {# dateDeb de la structure #}
                        <div class="form-group">
                            {{ form_errors(form.dateDeb) }}
                            {{ form_widget(form.dateDeb, {'attr': {'class': 'js-datepicker', 'placeholder': 'jj/mm/aaaa'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.dateFin) }}
                            {{ form_widget(form.dateFin, {'attr': {'class': 'js-datepicker', 'placeholder': 'jj/mm/aaaa'} }) }}
                        </div>

                        {# Coût total du projet #}
                        <div class="form-group">
                            {{ form_errors(form.coutTotal) }}
                            {{ form_widget(form.coutTotal, {'attr': {'class': 'form-control', 'placeholder': 'Coût total du projet'} }) }}
                        </div>

                        {# Montant demandé à l'OIF #}
                        <div class="form-group">
                            {{ form_errors(form.montantDemande) }}
                            {{ form_widget(form.montantDemande, {'attr': {'class': 'form-control', 'placeholder': 'Montant demandé à l\'OIF'} }) }}
                        </div>

                        {#Valider#}
                        <div class="form-group">
                            {{ form_widget(form.valider, {'attr': {'class': 'btn btn-success pull-right'} }) }}
                        </div>
                    </div>

                    {{ form_rest(form) }}
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>
{% endblock %}

{# Javascripts files #}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://raw.githubusercontent.com/jquery/jquery-ui/master/ui/i18n/datepicker-fr.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            $('.js-datepicker').datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-mm-yy',
                yearRange: "-0:+1"
            });
        });
    </script>

{% endblock %}
